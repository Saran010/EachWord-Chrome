{
  "manifest_version": 2,
  "name": "EachWord - expand your vocabulary",
  "short_name": "EachWord",
  "version": "1.1.6",
  "description": "Add new words when you watch movies, series or read books and they will be occasionally shown as push notifications.",
  "icons": {
	"16": "images/icons/icon16.png",
	"32": "images/icons/icon32.png",
	"48": "images/icons/icon48.png",
    "128": "images/icons/icon128.png"
  },
  "browser_action": {
      "default_icon": {
        "19": "images/default_icons/icon19.png",
        "38": "images/default_icons/icon38.png"
      },
      "default_title": "EachWord",
      "default_popup": "popup.html"
  },
  "content_scripts": [
      {
          "matches": ["*://*/*"],
          "css": ["wordCard.css"],
          "js": ["commonFunctions.js", "content.js"]
      }
  ],
  "background": {
    "scripts": ["commonFunctions.js", "background.js"],
	"persistent": true
  },
  "web_accessible_resources": [
  	"images/icons/closeButton32_active.png",
  	"images/icons/closeButton32_hover.png",
  	"images/icons/closeButton32.png"
  ],
  "options_page": "options.html",
  "author": "Maxim Kholiavchenko",
  "offline_enabled": true,
  "permissions": [
    "tabs",
	"notifications",
	"unlimitedStorage",
	"tts",
    "*://*/*"
  ]
}